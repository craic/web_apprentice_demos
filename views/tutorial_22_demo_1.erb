<img src='/assets/photo_metadata_1_400.jpg' alt='photo of snow geese in Skagit Valley, WA, USA'>
<br>
<div id="map_canvas"></div>


<br>
Lat <%= @latitude.to_s %>
<br>
Lon <%= @longitude.to_s %>

<br>
Lat <%= @latitude_1.to_s %>
<br>
Lon <%= @longitude_1.to_s %>

<br>
<h2>Dump of all the Metadata for this Image</h2>
<table>
<% @photo.tags.each do |tag| %>
  <% next if tag.nil? or tag =~ /^\s*$/ %>
  <tr><td><%= tag %></td>
      <td><%= @photo[tag] %> </td>
  </tr>
<% end %>
</table>

<style>
  #map_canvas {
    height: 270px;
    width: 400px;
  }
</style>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDPlbegz3bhu9AnJDCLWsOZM8jF3Hpp8tI&sensor=false"></script>
<script>

  function initialize() {

    // var myLocation = {
    //   'latitude':  ,
    //   'longitude':
    // };

    var myLatlng = new google.maps.LatLng( <%= @latitude %>, <%= @longitude %> );
    var mapOptions = {
      zoom: 13,
      center: myLatlng,
      mapTypeId: google.maps.MapTypeId.ROADMAP,
    }
    var map = new google.maps.Map(document.getElementById('map_canvas'), mapOptions);

    var marker = new google.maps.Marker({
        position: myLatlng,
        map: map,
        title: 'photograph'
    });

    var lineCoordinates = [
        new google.maps.LatLng(<%= @latitude %>, <%= @longitude %>),
        new google.maps.LatLng(<%= @latitude_1 %>, <%= @longitude_1 %>)
    ];

    var circle_symbol = {
        path: google.maps.SymbolPath.CIRCLE
    };

    var path = new google.maps.Polyline({
      path: lineCoordinates,
      strokeColor: '#FF0000',
      strokeOpacity: 1.0,
      strokeWeight: 2,
      map: map,
      icons: [
        { icon: circle_symbol,
          offset: '0%' }
        ],
      });

  }

  google.maps.event.addDomListener(window, 'load', initialize);
</script>

